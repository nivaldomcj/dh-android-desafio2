<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Foods" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/midnight</item>
    </style>

    <style name="Theme.Foods.ProgressBar">
        <item name="colorControlActivated">@color/indigo_500</item>
        <item name="android:textColor">@color/indigo_500</item>
    </style>

    <style name="Theme.Foods.TextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>

        <item name="boxBackgroundColor">@android:color/transparent</item>

        <item name="android:textColorHint">@color/indigo_200</item>
        <item name="endIconTint">@color/indigo_200</item>
        <item name="boxStrokeColor">@color/selector_text_input_layout</item>
    </style>

    <style name="Theme.Foods.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>

        <item name="android:textColor">@color/indigo_500</item>
    </style>

    <style name="Theme.Foods.SeparatorView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/link_water</item>
    </style>

    <style name="Theme.Foods.SeparatorText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/cello</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Foods.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Foods.ActionButton" parent="Theme.Foods.Button">
        <item name="android:layout_marginTop">64dp</item>
        <item name="backgroundTint">@color/sunset_orange</item>
    </style>

    <style name="Theme.Foods.CancelButton" parent="Theme.Foods.Button">
        <item name="backgroundTint">@color/ship_cove</item>
    </style>

</resources>